<h1>Cargos</h1>

<table>
  <thead>
    <tr>
      <th>Codcargo</th>
      <th>Nomecargo</th>
      <th>Salariobase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cargos.each do |cargo| %>
      <tr>
        <td><%= cargo.codcargo %></td>
        <td><%= cargo.nomecargo %></td>
        <td><%= cargo.salariobase %></td>
        <td><%= link_to 'Show', cargo %></td>
        <td><%= link_to 'Edit', edit_cargo_path(cargo) %></td>
        <td><%= link_to 'Destroy', cargo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

